generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  Id               String  @id @default(cuid())
  EventName        String
  EventDate        String
  EventTime        String
  Venue            String
  TicketLinks      String
  SocialLinks      String
  Description      String
  InquiryNumber    String
  FlyerImagePath   String
  IsEventWeekly    Boolean
  DayofWeek        String
  approved         Boolean @default(true)
  paid             Boolean @default(true)
  Email            String?
  Phonenumber      String?
  Organizationname String?
  EventId          String? @unique(map: "EventId")
  hidden           Boolean @default(false)
  rating           Int     @default(10)
}

model Paragraph {
  id                String   @id @unique @default(cuid())
  imagepath         String   @default("")
  body              String
  blogID            Int
  instagrampostlink String   @default("")
  position          Int      @default(1)
  blog              BlogPost @relation(fields: [blogID], references: [id], onDelete: Cascade)
}

model BlogPost {
  id            Int         @id(map: "id") @unique @default(autoincrement())
  author        String
  title         String
  date          String
  imagepath     String
  approved      Boolean     @default(true)
  dettydecember Boolean     @default(false)
  paragraph     Paragraph[]
}

model AdminUser {
  id       String @id
  username String
  password String

  @@unique([id, username])
}

model User {
  id          String @id
  email       String @unique(map: "User_username_key")
  password    String
  phonenumber String
  fullname    String
}
